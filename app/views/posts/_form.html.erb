<%= form_for Post.new, remote: true do |f| %>
  <div class="form-group">
    <%= f.text_area :body, class: "form-control", rows: 3, placeholder: placeholder %>

    <% if(defined?(post_id)) %>
      <!-- if reply form, submit parent post's id -->
      <%= f.hidden_field :post_id, value: post_id %>
    <% end %>

    <% if(defined?(receiver_id)) %>
      <!-- if posting other people's walls, add poster_id -->
      <%= f.hidden_field :receiver_id, value: receiver_id %>
    <% end %>
  </div>

  <button type="submit" class="btn btn-primary mb-2">Post</button>
<% end %>
