<div class="media mt-4" id="post<%= post.id %>">
  <img class="mr-3" src="<%= post.user.image.url(:thumb) %>">
  <div class="media-body">
    <a href="<%= user_path(post.user) %>">
      <h5 class="mt-0"><%= post.user.first_name %> <%= post.user.last_name %></h5>
    </a>
    <small><%= time_ago_in_words(post.created_at) %> ago</small>
    <p>
      <%= simple_format(post.body) %>
    <p>
    <div class="actions">
      <span><%= link_to post.get_upvotes.size.to_s + "ğŸ‘", like_post_path(post), method: :put, remote: true, id: "upvote" %></span>
      <span><%= link_to post.get_downvotes.size.to_s + "ğŸ–•", dislike_post_path(post), method: :put, remote: true, id: "downvote" %></span>
      |
      <a href="#">Reply</a>
      |
      <% if current_user == post.user %>
        <%= link_to "Delete", post_path(post), method: :delete,
        data: {confirm: "Are you sure?"} %>
      <% end %>
    </div>
  </div>
</div>
